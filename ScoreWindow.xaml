<Window x:Class="ArcadeGame2022.ScoreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArcadeGame2022"
        mc:Ignorable="d"
        Title="ScoreWindow"
        Height="864"
        Width="1536"
        WindowState="Maximized"
        WindowStyle="None"
        Left="0"
        Top="0">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/achtergrond.png"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="54"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="84"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="84"/>
        </Grid.RowDefinitions>
        <Button
            x:Name="TerugButton"
            Content="Terug"
            FontSize="50"
            Click="TerugButtonClick"
            Grid.Row="5"
            Grid.Column="6"
            Grid.ColumnSpan="3" BorderBrush="White" BorderThickness="5,5,5,5" Foreground="White" FontFamily="Impact" FontWeight="Bold" Background="{x:Null}"
            />
        <Button
            x:Name="DagButton"
            Content="D"
            FontSize="50"
            Click="DagButtonClick"
            Grid.Row="3"
            Grid.Column="6" Foreground="White" FontFamily="Impact" FontWeight="Bold" BorderBrush="White" BorderThickness="5,5,5,5" Background="{x:Null}"
            />
        <Button
            x:Name="WeekButton"
            Content="W"
            FontSize="50"
            Click="WeekButtonClick"
            Grid.Row="3"
            Grid.Column="7" Foreground="White" FontFamily="Impact" FontWeight="Bold" BorderBrush="White" BorderThickness="5,5,5,5" Background="{x:Null}"
            />
        <Button
            x:Name="MaandButton"
            Content="M"
            FontSize="50"
            Click="MaandButtonClick"
            Grid.Row="3"
            Grid.Column="8" Foreground="White" FontFamily="Impact" FontWeight="Bold" BorderBrush="White" BorderThickness="5,5,5,5" Background="{x:Null}"
            />
        <TextBlock
            x:Name="TitelTekst"
            Text="Dag scores"
            FontSize="30"
            Grid.Row="1"
            Grid.Column="1"
            Grid.ColumnSpan="4"
            TextAlignment="Center" Foreground="White" FontFamily="Impact" FontWeight="Bold"
            />
        <TextBlock
            x:Name="LijstScores"
            Text="Tekst"
            FontSize="30"
            Grid.Row="1"
            Grid.Column="1"
            Grid.RowSpan="5"
            TextAlignment="Center" Foreground="White" FontFamily="Impact"
            />
        <TextBlock
            x:Name="LijstNamen"
            Text="Tekst"
            FontSize="30"
            Grid.Row="1"
            Grid.Column="2"
            Grid.RowSpan="5"
            TextAlignment="Center" Foreground="White" FontFamily="Impact" FontWeight="Bold"
            />
        <TextBlock
            x:Name="LijstGewonnen"
            Text="Tekst"
            FontSize="30"
            Grid.Row="1"
            Grid.Column="3"
            Grid.RowSpan="5"
            TextAlignment="Center" Foreground="White" FontFamily="Impact" FontWeight="Bold"
            />
        <TextBlock
            x:Name="LijstData"
            Text="Tekst"
            FontSize="30"
            Grid.Row="1"
            Grid.Column="4"
            Grid.RowSpan="5"
            TextAlignment="Center" Foreground="White" FontFamily="Impact" FontWeight="Bold"
            />
    </Grid>
</Window>
