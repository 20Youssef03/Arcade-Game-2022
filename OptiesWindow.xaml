            Margin="482,422,0,0"
            VerticalAlignment="Top"
            FontSize="60"
            FontWeight="Bold"
            FontFamily="Impact"
            Width="185" Foreground="White"
            />
        <Label
            x:Name="Label_SoundEffects"
            Content="Sound Effects"
            HorizontalAlignment="Left"
            Margin="482,570,0,0"
            VerticalAlignment="Top"
            FontSize="60"
            FontFamily="Impact"
            FontWeight="Bold" Foreground="White"
            />
        <Label
            x:Name="Label_Muziek"
            Content="Muziek"
            HorizontalAlignment="Left"
            Margin="482,266,0,0"
            VerticalAlignment="Top"
            FontFamily="Impact"
            FontSize="60"
            FontWeight="Bold" Foreground="White"
