            HorizontalAlignment="Left"
            Margin="35,432,0,0"
            VerticalAlignment="Top"
            FontFamily="Impact"
            FontSize="60"
            FontWeight="Bold"
            BorderBrush="White"
            BorderThickness="5,5,5,5"
            Background="{x:Null}"
            Width="269"
            Height="166" Foreground="White" Click="OptieWindowButtonHelp_Click"
